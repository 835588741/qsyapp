<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/dialog_clip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialo_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_sex_secrecy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="left"
            android:text="保密"
            android:textColor="@color/main_text_support"
            android:textSize="14sp" />
        <include layout="@layout/include_line_a"/>
        <TextView
            android:id="@+id/dialog_sex_man"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="left"
            android:text="男"
            android:textColor="@color/main_text_support"
            android:textSize="14sp" />
        <include layout="@layout/include_line_a"/>
        <TextView
            android:id="@+id/dialog_sex_woman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:gravity="left"
            android:text="女"
            android:textColor="@color/main_text_support"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>