<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mDpDimen15"
    android:paddingRight="@dimen/mDpDimen15"
    tools:context=".ui.function.UpendActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/video_view_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/mDpDimen15"
            android:gravity="center"
            app:cardBackgroundColor="@color/black"
            app:cardCornerRadius="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <VideoView
                android:id="@+id/vv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.manyu.videoshare.view.MCustomZoomView
                android:id="@+id/mczv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="@id/vv"
                app:layout_constraintLeft_toLeftOf="@id/vv"
                app:layout_constraintRight_toRightOf="@id/vv"
                app:layout_constraintTop_toTopOf="@id/vv" />
        </android.support.v7.widget.CardView>
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/free"
                android:layout_width="@dimen/value_50dp"
                android:layout_height="@dimen/value_50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/select_toggle_gray_white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="自由"
                android:textColor="@color/color_toggle_black_white"
                android:textSize="@dimen/text_size_12sp" />

            <RadioButton
                android:id="@+id/ratio1"
                android:layout_width="@dimen/value_50dp"
                android:layout_height="@dimen/value_50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/select_toggle_gray_white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="1:1"
                android:textColor="@color/color_toggle_black_white"
                android:textSize="@dimen/text_size_12sp" />

            <RadioButton
                android:id="@+id/ratio43"
                android:layout_width="37dp"
                android:layout_height="@dimen/value_50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/select_toggle_gray_white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="4:3"
                android:textColor="@color/color_toggle_black_white"
                android:textSize="@dimen/text_size_12sp" />


            <RadioButton
                android:id="@+id/ratio34"
                android:layout_width="@dimen/value_50dp"
                android:layout_height="37dp"
                android:background="@drawable/select_toggle_gray_white"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="3:4"
                android:textColor="@color/color_toggle_black_white"
                android:textSize="@dimen/text_size_12sp" />

        </RadioGroup>

        <include layout="@layout/layout_video_seekbar" />
    </LinearLayout>
</LinearLayout>