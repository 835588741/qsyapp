<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.account.NewPhoneActivity">
    <include layout="@layout/include_app_title" />
    <LinearLayout
        android:layout_marginTop="33dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:lines="1"
                    android:textSize="@dimen/edit_size"
                    android:inputType="phone"
                    android:layout_marginTop="20dp"
                    android:id="@+id/changephone_edit_phone"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edit_null"
                    android:textColorHint="@color/hint_color"
                    android:hint="请输入新手机号"
                    />
                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/login_blue"
                    android:textSize="14sp"
                    android:id="@+id/changephone_btn_getverify"
                    android:text="@string/register_getverify"/>
            </LinearLayout>
            <include layout="@layout/include_line_a"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:lines="1"
                android:textSize="@dimen/edit_size"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:id="@+id/changephone_edit_verify"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edit_null"
                android:textColorHint="@color/hint_color"
                android:hint="请输入验证码"
                />
            <include layout="@layout/include_line_a"/>
        </LinearLayout>
        <Button
            android:id="@+id/changephone_btn_next"
            android:text="确认"
            android:textSize="18dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_2"/>
    </LinearLayout>
</LinearLayout>