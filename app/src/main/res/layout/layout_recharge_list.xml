<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginBottom="21dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/recharge_list_title"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:background="@drawable/recharge_two_back"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/recharge_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/user_title_back"
            android:layout_gravity="center_horizontal"
            android:paddingTop="@dimen/recharge_money"
            android:text=" 30次 " />
        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/recharge_list_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:textColor="@color/paylist_color"
            android:text="9.9元"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/recharge_list_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:paddingBottom="@dimen/recharge_money"
            android:textColor="@color/hint_color"
            android:text="9.9元"/>
    </LinearLayout>
</LinearLayout>
