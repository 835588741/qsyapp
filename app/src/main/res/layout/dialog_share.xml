<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:background="@color/dialog_clip"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_clip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="邀请"
            android:textColor="@color/hint_color"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/dialog_share_qq"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_qq"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QQ"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialog_share_mm"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_mm"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialog_share_wb"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_wb"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialog_share_save"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_down"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存图片"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dialog_share_copy"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/share_copy"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:textSize="12sp"
                    android:textColor="@color/hint_color"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="复制链接"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:background="@color/dialog_share_back"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/hint_color"
            android:text="取消"
            android:id="@+id/dialog_share_cancle"
            android:textSize="18sp"/>
    </LinearLayout>


</LinearLayout>