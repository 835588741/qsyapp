<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.user.SignatureActivity">
    <include layout="@layout/include_app_title"/>
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/signature_edit_name"

            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:maxLines="1"
            android:maxLength="60"
            android:padding="16dp"
            android:hint="请输入签名"
            android:layout_gravity="start"
            android:gravity="start"
            android:textSize="@dimen/edit_size"
            android:textColorHint="@color/main_text_explain"
            android:background="@drawable/edit_four"/>
        <ImageView
            android:paddingTop="16dp"
            android:id="@+id/signature_btn_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="31dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_delete"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/hint_color"
            android:text="签名长度为0-50个字符"/>
        <TextView
            android:id="@+id/signature_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/hint_color"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/hint_color"
            android:text="/50"/>
    </LinearLayout>
</LinearLayout>