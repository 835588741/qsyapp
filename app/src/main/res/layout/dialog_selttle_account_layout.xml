<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/c_dialog_close_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/c_dialog_layout"
        android:layout_margin="@dimen/mDpDimen6"
        android:padding="@dimen/mDpDimen6"
        android:src="@mipmap/icon_close" />

    <LinearLayout
        android:id="@+id/c_dialog_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:minWidth="150dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/mDpDimen25"
        android:paddingTop="@dimen/mDpDimen25"
        android:paddingRight="@dimen/mDpDimen25"
        android:paddingBottom="@dimen/mDpDimen40">

        <TextView
            android:id="@+id/mReduceTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mDpDimen20"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/mReduceProportion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_18sp" />

        <TextView
            android:id="@+id/mReduceProportionTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mDpDimen20"
            android:text="收费标准影响实际到账金额"
            android:textColor="#999999"
            android:textSize="@dimen/text_size_10sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>